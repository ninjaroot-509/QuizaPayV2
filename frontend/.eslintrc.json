{
    "env": {
        "browser": true,
        "node": true,
        "amd": true,
        "es6": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "off",
        "react/prop-types": ["off"],
        "react/jsx-uses-react": 1,
        "no-set-state": "off",
        "react/no-unescaped-entities": 0,
       "react/no-multi-comp":  [1, { "ignoreStateless": true }]
    },
    "globals": {
        "localStorage": true,
        "fetch": true
    }
}
